<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhao.elevator.activity.MainActivity">

    <Button
        android:text="登录"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/denglu"
        android:layout_below="@+id/chuce"
        android:layout_alignStart="@+id/chuce" />

    <Button
        android:text="主界面"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/denglu"
        android:layout_alignStart="@+id/denglu"
        android:id="@+id/zhujiemian" />

    <Button
        android:text="注册"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chuce"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="乘梯辅助"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zhujiemian"
        android:layout_alignParentStart="true"
        android:id="@+id/bt1" />

    <Button
        android:text="最快电梯"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"
        android:layout_alignEnd="@+id/bt1"
        android:id="@+id/zuikuai" />

    <Button
        android:text="应急救援"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_below="@+id/zuikuai"
        android:layout_alignParentStart="true" />

    <Button
        android:text="地图电梯 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:id="@+id/button8" />

    <Button
        android:text="实时监控"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button8"
        android:layout_alignEnd="@+id/button8"
        android:id="@+id/button10" />

    <Button
        android:text="故障详单"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button11"
        android:layout_alignParentStart="true"
        android:id="@+id/button12" />

    <Button
        android:text="维修单"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true" />

    <Button
        android:text="历史记录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button12"
        android:layout_alignEnd="@+id/button12"
        android:id="@+id/button13" />

    <Button
        android:text="小曹要的图片"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/denglu"
        android:layout_alignParentEnd="true"
        android:id="@+id/button14" />

</RelativeLayout>
